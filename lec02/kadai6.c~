#include <stdio.h>

int main() 
{
    int n;

    for (n = 1; n <= 100; n++) {
        while (n != 1) {
            if (n % 2) {
                n /= 2;
            } else {
                n = n * 3 + 1;
            }
            printf("%d ", n);
        }
        printf("\n");
    }
    return 0;
}
        
